{
  "name": "taktisyen-electron",
  "version": "1.0.2",
  "description": "Türkçe hece analizcisi",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Emre Özcan",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^4.4.1",
    "jquery": "^3.4.1",
    "popper.js": "^1.16.1",
    "underscore": "^1.10.2"
  },
  "devDependencies": {
    "electron-builder": "^22.5.1",
    "electron": "^8.2.2"
  },
  "build": {
    "appId": "emreozcan.taktisyen",
    "productName": "Taktisyen",
    "copyright": "© 2020 ${author}",
    "artifactName": "${productName} Kurulumsuz ${version}.${ext}",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName} Kurucu ${version}.${ext}",
      "language": "1055"
    }
  }
}
