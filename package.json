{
  "name": "taktisyen-electron",
  "version": "1.0.2",
  "description": "Türkçe hece analizcisi",
  "main": "main.js",
  "scripts": {
    "start": "sass ./ && electron .",
    "pack": "sass ./ && electron-builder --dir",
    "build-this": "sass ./ && electron-builder",
    "build": "sass ./ && electron-builder -wl"
  },
  "author": "Emre Özcan",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^4.4.1",
    "jquery": "^3.4.1",
    "popper.js": "^1.16.1",
    "underscore": "^1.10.2"
  },
  "devDependencies": {
    "electron": "^8.2.2",
    "electron-builder": "^22.5.1",
    "sass": "^1.26.10"
  },
  "build": {
    "appId": "emreozcan.taktisyen",
    "productName": "Taktisyen",
    "copyright": "© 2020 ${author}",
    "artifactName": "${productName} ${version} ${os}_${arch}.${ext}",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName} Kurucu ${version} ${os}_{$arch}.${ext}",
      "language": "1055"
    }
  }
}
